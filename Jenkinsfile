pipeline {
    agent any

    stages {
        stage('clone') {
            steps {
                echo 'cloning the job'
            }
        }
        stage('build') {
            steps {
                echo 'building the job'
            }
        }
        stage('test') {
            steps {
                echo 'testing the job'
            }
        }
        stage('deploy') {
            steps {
                echo 'deploying the job'
            }
        }
    }
}
